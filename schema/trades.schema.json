{
    "title": "Trades Schema",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "$defs": {
        "rangeOrInteger": {
            "oneOf": [
                {"type": "integer"},
                {
                    "type": "object",
                    "properties": {
                        "min": {"type": "integer"},
                        "max": {"type": "integer"}
                    },
                    "required": ["min"]
                }
            ]
        },
        "item": {
            "type": "object",
            "properties": {
                "material": {"type": "string"},
                "amount": {"$ref": "#/$defs/rangeOrInteger"},
                "name": {"type": "string"},
                "lore": {
                    "type": "array",
                    "items": {"type": "string"}
                }
            },
            "required": ["material"]
        }
    },
    "properties": {
        "null_weight": {"type": "integer"},
        "num_iterations": {"$ref": "#/$defs/rangeOrInteger"},
        "trades": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "weight": {"type": "integer"},
                    "allow_duplicates": {"type": "boolean"},
                    "max_uses": {"$ref": "#/$defs/rangeOrInteger"},
                    "result": {"$ref": "#/$defs/item"},
                    "ingredients": {
                        "type": "array",
                        "maxItems": 2,
                        "items": {"$ref": "#/$defs/item"}
                    }
                },
                "required": ["weight", "result", "ingredients"]
            }
        }
    },
    "required": ["trades"]
}